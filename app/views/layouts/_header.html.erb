<header>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'code dojo', root_path, class:"navbar-brand" %>
    </div>
<!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resources&nbsp<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Resource#index', resources_path %></li>
          <li role="presentation" class="divider"></li>
          <li><%= link_to 'Resource#new', new_resource_path %></li>
        </ul>
      </li> 
    </ul>
    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Let's do this!">
      </div>
      <button type="submit" class="btn nav-btn">Submit</button>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <% if signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account&nbsp<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to '<i class="icon-cog icon-white"></i> Settings'.html_safe, edit_user_path(current_user) %></li>
            <li role="presentation" class="divider"></li>
            <li><%= link_to '<i class="icon-off"></i> Logout'.html_safe, logout_path, method: "delete" %></li>
          </ul>
        </li>
        <li><%= button_to new_resource_path, class:"btn btn-default navbar-btn" do %>
          <i class="icon-book"></i>&nbsp&nbspAdd a Resource
          <% end %>
        <li>
      <% else %>
        <li><%= link_to '<i class="icon-user icon-white"></i> Sign Up'.html_safe, signup_path %></li>
        <li><%= link_to '<i class="icon-signin icon-white"></i> Log In'.html_safe, login_path %></li>
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>
