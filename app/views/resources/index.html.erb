<div class="row">
  <div class="col-md-8 col-md-offset-1">
     <div class="row">
      <div class="col-md-6">
        <h4><%= @resources.count %> Results Found</h4>
      </div>
      <div class="col-md-6">
        <ul class="pull-right list-inline list-style">
          <li><div class="btn btn-default"><%= sortable "name" %></div></li>
          
          <li><div class="btn btn-default"><%= sortable "created_at", "Most Recent" %></div></li>
          <li><%= link_to "Highest Rated", resources_path, class:"btn btn-default" %></li>
          <li><div class="btn btn-default"><%= sortable "cost" %></div></li>
        </ul>
      </div>
    </div>
    <table class="table">
    <%= render @resources.sort_by( &:average_score).reverse! %>

    </table>
    <%= will_paginate @resources %>
  </div>
  <div class="col-md-2 panel-padding">
    <%= render 'tag_filter' %>
  </div>
</div>
