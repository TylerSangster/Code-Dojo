<div class="col-md-7 col-md-offset-1">
  <h2><%= @resource.name %></h2>
  <div class="row">
    <span class='st_facebook_hcount' displayText='Facebook'></span>
    <span class='st_twitter_hcount' displayText='Tweet'></span>
    <span class='st_googleplus_hcount' displayText='Google +'></span>
    <span class='st_sharethis_hcount' displayText='ShareThis'></span>
  </div>
</div>
<div class="row">
  <div class="col-md-7 col-md-offset-1">
    <%= render partial: 'show_resource', locals: {resource: @resource} %>
  </div>
      
  <div class="col-md-3">
    <div class="row">
      <div class="col-md-1">
        <h1><%= @resource.reviews.count %></h1>
        <p>Reviews</p>
      </div>
      <div class="col-md-1 col-md-offset-1">
        <h1>10</h1>
        <p>reviews</p>
      </div>
      <div class="col-md-1 col-md-offset-1">
        <h1>10</h1>
        <p>reviews</p>
      </div>
    </div>
    <button class="btn btn-block btn-warning">Write a Review</button>
    <br>
    <%= render partial: 'interest_form', locals: {resource: @resource} %>
      <br>
    <%= render partial: 'interested_users', locals: {resource: @resource} %>
      <br>
    <%= render partial: 'similar_resources', locals: {resource: @resource} %>
  </div>
</div>

<div class="row clearfix">
  <div class="row container col-md-offset-1 col-lg-offset-1">
    <%= render @resource.reviews %>
    <%= render partial: 'build_review_form', locals: {resource: @resource} %>
  </div>
</div>