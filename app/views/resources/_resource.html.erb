<tr>
  <h2><%= link_to resource.name, resource %></h2>
    <h4>Subject: <%= raw resource.subject_list.map { |subject| link_to subject, subject_path(subject), class: "label label-primary" }.join(', ') %></h4>
    <h4>Format: <%= raw resource.format_list.map { |format| link_to format, format_path(format), class: "label label-success" }.join(', ') %></h4>

    <p>Description: <%= link_to resource.description, resource %></p>
    <p>Cost: <%= number_to_currency(resource.cost/100) %>&nbsp<%= resource.cost_type %></p>
    
    <h4>Provider: <%= raw resource.provider_list.map { |provider| link_to provider, provider_path(provider), class: "label label-warning" }.join(', ') %></h4>

    <p>URL: <%= link_to resource.url, resource %></p>
      <div>
       <%= button_tag resource.name, class:"btn btn-danger"  %>
      </div>
      <div>
        <% if @current_user && @current_user.admin? %>
          <%= button_to "edit", edit_resource_path(resource), class:"btn btn-default" %>
          <%= button_to "delete", resource, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-default" %>
        <% end %>
      </div>


    <div><% render resource.reviews %>  </div>

    <div>
      <% @review = resource.reviews.build  %>
      <%# @review.resource_id = resource.id %>
      <% form_for @review do |f| %>
      <% render '/reviews/form', f: f %>
      <% f.hidden_field :resource_id, :value => resource.id %>
      <div>
        <% f.submit "Create review", class: "btn" %>
      </div>
      <% end %>
</tr>