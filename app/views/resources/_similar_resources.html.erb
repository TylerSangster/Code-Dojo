<% if resource.interested_users.length > 0 %>
<p>People were also interested in:</p>
<table class="table">
  <% resource.similar(3).each do |similar_resource| %>
    <tr>
      <td>
      <%= link_to similar_resource.name, similar_resource %><i class="pull-right <%= star_classes(similar_resource.average_score.to_f) %>"></i>
      </td>
    </tr>
  <% end %>
</table>
<% end %> 