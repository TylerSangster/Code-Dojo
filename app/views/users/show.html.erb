<div class="col-md-10 col-md-offset-1">
  <div class="page-header">
    <h2><%= "#{@user.first_name} #{@user.last_name}" %>
    <% if @user == current_user %>
      <small class="pull-right"><%= link_to "Edit your profile", edit_user_path, class:"btn btn-primary btn-large" %></small></h2>
    <% end %>
  </div>
</div>

<div class="col-md-3 col-md-offset-1">
  <% if @user.avatar? %>
    <%= image_tag @user.avatar, class:"img-responsive img-thumbnail" %>
  <% end %>

  <div class="side-bar-row col-md-12 row">
    <div class="col-md-6 pull-left">
      <h1><%= @user.reviews.length %></h1>
      <p>Reviews</p>
    </div>
    <div class="col-md-6 pull-left">
      <h1><%= @user.interests.length %></h1>
      <p>Saved Resources</p>
    </div>
  </div>
  <% if @user.interests %>
    <div class="side-bar-row col-md-12">
      <p>Resources this user is interested in:</p>
      <table class="table">
        <%= render partial: "interesting_resources", collection: @user.interesting_resources, as: "interesting_resource" %>
      </table>
      <% else %>
      <%= "#{user.first_name} hasn't saved any resources to their list yet." %> 
      <% end %>
    </div>
</div>
  <div class="col-md-7">
    <div class="row">
      <div class="col-md-6">
        <h4><%= @user.reviews.count %> Reviews</h4>
      </div>
      <div class="col-md-6">
        <ul class="pull-right list-inline list-style">
          <li><%= link_to "Most Recent", resources_path, class:"btn btn-default" %></li>
          <li><%= link_to "Highest Rated", resources_path, class:"btn btn-default" %></li>
        </ul>
      </div>
    </div>
    <table class="table">
      <%= render partial: "user_reviews", collection: @user.reviews, as: "review" %>
    </table>
  </div>